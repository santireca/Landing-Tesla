import Section from "./Section.astro";
---

<Section
    title="Model X"
    subtitle="Programe una consulta virtual"
    color="black"
    id="model-x"
>
    <div slot="footer" class="gap-x-6 flex mx-auto">
        <a
        class="border-[3px] border-gray-700 bg-gray-700 text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors hover:bg-gray-800 hover:border-gray-800"
        href="#"
        >
        Pedido personalizado</a
        >
        <a
        class="bg-white text-sm rounded font-medium px-12 py-2 transition-colors hover:bg-gray-100 hover:border-gray-100 inline-flex justify-center items-center text-black"
        href="#"
        >
        Saber m√°s</a
        >
    </div>

    <img
        slot="background"
        alt="Model X"
        class="h-full w-full object-cover object-center"
        src="model-x.avif"
        id="bg-image-modelx"
    />
</Section>

<script>
    function isEdge() {
        if (
        navigator.userAgent.indexOf("Edge") > -1 ||
        navigator.userAgent.indexOf("Edg") > -1
        ) {
        return true;
        } else {
        return false;
        }
    }

    var imageElement = document.querySelector("#bg-image-modelx") as HTMLImageElement;

    if (isEdge()) {
        imageElement.src = "model-x.webp";
    } else {
        imageElement.src = "model-x.avif";
    }
</script>